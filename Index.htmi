    <style>
        body {
            font-family: 'Vazir', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }
        .hero-section {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://placehold.co/1200x600/007bff/white?text=مبل‌شویی+معجزه') no-repeat center center/cover;
            color: white;
            padding: 100px 0;
            text-align: center;
        }
        .logo {
            width: 150px;
            margin-bottom: 20px;
        }
        .service-card {
            transition: transform 0.3s;
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .service-card:hover {
            transform: translateY(-10px);
        }
        .gallery-img {
            border-radius: 10px;
            transition: transform 0.3s;
        }
        .gallery-img:hover {
            transform: scale(1.05);
        }
        .contact-btn {
            background: #25D366;
            border: none;
            padding: 10px 20px;
            border-radius: 50px;
            color: white;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
        }
        .contact-btn:hover {
            background: #128C7E;
            color: white;
        }
        .social-icon {
            font-size: 24px;
            color: #E1306C;
            margin: 0 10px;
